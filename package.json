{
  "name": "export-service",
  "version": "1.0.0",
  "description": "This will export local db dumps into production or dev server",
  "main": "index.js",
  "jest": {
    "bail": 1,
    "verbose": true,
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "node ./dist/server.js",
    "dev": "npm run postinstall && nodemon ./dist/server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "lint-fix": "eslint  --fix src/**",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node ./src/app.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CF251/Export.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/bson": "^4.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.4",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "3.6.0",
    "@typescript-eslint/parser": "3.6.0",
    "concurrently": "^5.2.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "istanbul-slack-notify": "^1.0.20",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@types/config": "0.0.36",
    "@types/mongoose": "^5.11.97",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.3",
    "express-validator": "^6.6.0",
    "jsonwebtoken": "^8.5.1",
    "lokijs": "^1.5.9",
    "mongoose": "^6.0.4",
    "neo4j-driver": "^4.3.3",
    "nodemon": "^2.0.4",
    "request": "^2.81.0",
    "winston": "^3.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
